<%# Render the new/edit post form in a card %>
<div class="card w-100 mx-auto mt-5 mb-3 text-dark bg-light">
  <div class="card-header">
  	<p class="card-text text-center fs-4">Edit Post</p>
  </div>
  <div class="card-body">
    <%= render "form", post: @post %>
  </div>
</div>

<%# Add a back button that redirects back to the show view for the post %>
<div class="container mb-5 text-center">
  <%= link_to "Back", @post, class: 'btn btn-dark px-5' %>
</div>